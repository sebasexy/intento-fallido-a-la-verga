<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="2dp"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/cardview_note_title"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="contact det"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:elevation="5dp"/>

            <TextView
                android:id="@+id/note_item1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_below="@id/cardview_note_title"
                android:elevation="5dp"
                />

            <TextView
                android:ellipsize="end"
                android:id="@+id/note_item2"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_item1"
                android:elevation="5dp"/>

            <TextView
                android:id="@+id/note_item3"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_item2"
                android:elevation="5dp"/>

            <TextView
                android:ellipsize="end"
                android:id="@+id/note_item4"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_item3"
                android:elevation="5dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:visibility="invisible"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="2dp"
        android:layout_height="160dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <TextView
                android:ellipsize="end"
                android:id="@+id/cardview_note_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="contact det"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:elevation="5dp"/>

            <TextView
                android:ellipsize="end"
                android:id="@+id/note_item12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_below="@id/cardview_note_title2"
                android:elevation="5dp"/>

            <TextView
                android:ellipsize="end"
                android:id="@+id/note_item22"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_item12"
                android:elevation="5dp"/>

            <TextView
                android:ellipsize="end"
                android:id="@+id/note_item32"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_item22"
                android:elevation="5dp"/>

            <TextView
                android:ellipsize="end"
                android:id="@+id/note_item42"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_item32"
                android:elevation="5dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>